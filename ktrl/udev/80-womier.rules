# Find the IDs with -
#
#   udevadm info -a -n /dev/input/by-id/<DEV> | rg idVendor
#   udevadm info -a -n /dev/input/by-id/<DEV> | rg idProduct
#

ATTRS{idVendor}=="046d", ATTRS{idProduct}=="c52b", ACTION=="add", RUN+="/usr/local/bin/womier-udev-add.sh"
ATTRS{idVendor}=="046d", ATTRS{idProduct}=="c52b", ACTION=="remove", RUN+="/usr/local/bin/womier-udev-remove.sh"